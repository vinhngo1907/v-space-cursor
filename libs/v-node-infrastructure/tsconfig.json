{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "typeRoots": [
            "*.d.ts",
            "types/*.d.ts"
        ],
        // "types": [
        //     "@types/jest"
        // ]
    },
    "include": [
        "src",
        "*.d.ts"
    ]
}